block main
    | Colors and type
    +layout__section('demo-colors-and-type')
        .container
            .demo-colors-and-type__container
                .demo-colors
                    - var title = ['Dark Shade 100%','Dark Shade 75%','Dark Shade 50%','Dark Shade 25%','Dark Shade 5%','Purple','Green'];
                    - var text = ['#1F2041','#1F2041','#1F2041','#1F2041','#1F2041','#BC9CFF','#6FCF97'];
                    - var modBgColor = ['first','second','third','fourth','fifth','sixth','seventh'];

                    - for (var i=0; i<7; i++)
                        .demo-colors__item(class='demo-colors__item_bg-color_' + modBgColor[i])
                            h2.header_level-2=title[i]
                            p.header_level-2.demo-colors__text=text[i]
                .demo-type
                    - var content = ['This one is the sub-section or widget title','Next one is the item title inside widgets','This is a label or CTA text'];
                    - var tag = ['h1','h2','h3'];
                    - var transform = ['','','uppercase'];
                        .demo-type__title
                            - for (var i=0; i<3; i++)
                                - var level = tag[i] === 'h1' ? 'header-level-1' : tag[i] === 'h2' ? 'header-level-2' : tag[i] === 'h3' ? 'header-level-3' : ''
                                #{tag[i]}(class="demo-type__item" class=level)=content[i]
                            p.demo-type__item(style='max-width: 301px; margin-top: -2px;') This is the body text which is used for most of the design, like paragraphs, lists, etc.

    | Form elements
    +layout__section('demo-form-elements')
        .container
            .form-elements__container
                .row1-col1
                    .demo-text-field.demo-text-field_default
                        h3.demo-text-field__title Text field
                        +input({type: 'email', placeholder: 'Email'})
                    .demo-text-field.demo-text-field_hovered-and-focused
                        h3.demo-text-field__title Text field
                        +input({type: 'text', value: 'This is pretty awesome'})
                    .demo-dropdown.demo-dropdown_default_big.demo-dropdown_default
                        h3.demo-dropdown__title Dropdown
                        +dropdown({
                            selectionText: 'Сколько гостей',
                            items: [
                                {text: 'Взрослые', textPlural: 'Гость, Гостя, Гостей'},
                                {text: 'Дети', textPlural: 'Гость, Гостя, Гостей'},
                                {text: 'Младенцы', textPlural: 'Младенец, Младенца, Младенцев'}
                            ],
                            controls: true
                        })
                    .demo-text-field.demo-text-field_masked
                        h3.demo-text-field__title Masked text field
                        +input({type: 'text', placeholder: 'ДД.ММ.ГГГ'})
                    .demo-dropdown-date
                        div.demo-dropdown-date__from
                            h3.demo-dropdown-date__title Dropdown date
                            +date({
                                name: 'dropdownDate',
                                placeholder: 'ДД.ММ.ГГГГ'
                            })
                        div.demo-dropdown-date__to
                            h3.demo-dropdown-date__title Dropdown date
                            +date({
                                name: 'dropdownDate',
                                placeholder: 'ДД.ММ.ГГГГ'
                            })
                    .demo-dropdown.demo-dropdown_filter-date
                        h3.demo-dropdown__title Filter date dropdown
                        +date({
                            name: 'demo-date',
                            dateFormat: 'd M',
                            placeholder: 'ДД.ММ.ГГГГ'
                        })
                    .demo-text-field.demo-text-field_subscription
                        h3.demo-text-field__title Subscription text field
                        +input({type: 'email', name: 'subscribe', placeholder: 'Email', enableArrowBtn: true})
                .row1-col2
                    .demo-checkbox-buttons
                        h3.demo-checkbox-buttons__title Checkbox buttons
                        +checkbox-buttons({
                            items: [
                                {label: 'Можно курить', name: 'smoke'},
                                {label: 'Можно с питомцами', name: 'animals', isChecked: true},
                                {label: 'Можно пригласить гостей<br>(до 10 человек)', name: 'guests', isChecked: true}]
                        })
                    .demo-radio-buttons
                        h3.demo-radio-buttons__title Radio buttons
                        .demo-radio-buttons__items
                            +input({type: 'radio', name: 'gender', label: 'Мужчина', isChecked: true})
                            +input({type: 'radio', name: 'gender', label: 'Женщина'})
                    .demo-toggle
                        h3.demo-toggle__title Toggle
                        .demo-toggle__items
                            +input({type: 'toggle', label: 'Получить спецпредложение'})
                            +input({type: 'toggle', label: 'Получить спецпредложение', isChecked: true})
                    .demo-like-buttons
                        h3.demo-like-buttons__title Like button
                        .demo-like-buttons__items
                            +like-button({likes: 2})
                            +like-button({likes: 12})
                    .demo-rate-button
                        h3.demo-rate-button__title Rate button
                        .demo-rate-button__first
                            +rate-buttons({name: 'rate-first', stars: '4'})
                        .demo-rate-button__second
                            +rate-buttons({name: 'rate-second', stars: '5'})

                .row1-col3
                    .demo-range-slider
