include ./base-data

block variables

include ../../components/layout/layout
include ../../components/header/header
include ../../components/footer/footer

doctype html
html
    head
        meta(charset = 'utf-8')
        meta(name="viewport" content="width=device-width,initial-scale=1")
        title
            block title
    body
        +layout__header()
            +header({
                logo: require('./img/logo/logo.svg'),
                menuItems: [
                    {name: 'О нас'},
                    {
                        name: 'Услуги', submenu: [
                            {name: 'Бронирование номеров'}
                        ]
                    },
                    {name: 'Вакансии'},
                    {name: 'Новости'},
                    {name: 'Соглашения', submenu: [
                            {name: 'Соглашения о соглашении'}
                        ]
                    }
                ],
                buttons: [
                    {type: 'outline', text: 'Войти'},
                    {type: 'no-outline', text: 'Зарегистрироваться'}
                ]
            })
            block header
        +layout__main()
            block main
        +layout__footer()
            +footer({
                logo: require('./img/logo/logo.svg'),
                slogan: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации "Отельный взгляд"',
                blocks: [
                    {title: 'Навигация', items: [{name: 'О нас'}, {name: 'Новости'}, {name: 'Служба поддержки'}, {name: 'Услуги'}]},
                    {title: 'О нас', items: [{name: 'О сервисе'}, {name: 'Наша команда'}, {name: 'Вакансии'}, {name: 'Инвесторы'}]},
                    {title: 'Служба поддержки', items: [{name: 'Соглашения'}, {name: 'Сообщества'}, {name: 'Связь с нами'}]}
                ],
                subscribe: {title: 'Подписка', text: 'Получайте специальные предложения и новости сервиса'},
                copyright: 'Copyright &copy; 2018 Toxin отель. Все права зачищены'
            })
                block footer
    block scripts
