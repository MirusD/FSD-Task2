include ./base-data

block variables

include ../../components/layout/layout
include ../../components/header/header
include ../../components/footer/footer

doctype html
html
    head
        meta(charset = 'utf-8')
        meta(name="viewport" content="width=device-width,initial-scale=1")
        title
            block title
    body
        +layout()
            +layout__header()
                +layout__container({basis: 14400})
                    block header
            +layout__main()
                    block main
            +layout__footer()
                +layout__container({basis: 1440, align: 'center' })
                    block footer
        block scripts
